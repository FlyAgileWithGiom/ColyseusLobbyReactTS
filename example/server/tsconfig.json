{
  "compilerOptions": {
    "experimentalDecorators": true
  },
  "outDir": "dist/",
  "rootDir": "src/",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "composite": true,
  "module": "es2020",
  "moduleResolution": "Node",
  "declaration": true,
  "sourceMap": true,
  "allowSyntheticDefaultImports": true,
  "experimentalDecorators": true,
  "allowJs": false,
  "skipLibCheck": true,
  "esModuleInterop": false,
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "forceConsistentCasingInFileNames": true,
  "module": "ESNext",
  "moduleResolution": "Node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "target": "esnext"
}
